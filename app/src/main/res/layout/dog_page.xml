<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode_background">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dogviewV25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dogviewV60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dogviewH03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dogviewH10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dogviewH53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dogviewH60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/dogNameText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Dog Name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/dogviewH10"
        app:layout_constraintEnd_toStartOf="@id/dogviewV25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/dogviewH60"
        app:layout_constraintEnd_toStartOf="@id/dogviewV25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogviewH10"
        app:srcCompat="@drawable/bhh_new" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/dogviewInfoRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dogviewV25"
        app:layout_constraintTop_toBottomOf="@id/dogviewH60"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogviewPoopRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/dogviewV25"
        app:layout_constraintEnd_toStartOf="@id/dogviewV60"
        app:layout_constraintTop_toBottomOf="@id/dogviewH10"
        app:layout_constraintBottom_toBottomOf="@id/dogviewH53"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogviewVetRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/dogviewV60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogviewH10"
        app:layout_constraintBottom_toBottomOf="@id/dogviewH53"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogviewBodyScoreRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/dogviewV25"
        app:layout_constraintEnd_toStartOf="@id/dogviewV60"
        app:layout_constraintTop_toBottomOf="@id/dogviewH60"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogviewVaccineRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/dogviewV60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogviewH60"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/dogviewPoopScoreHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Recent Poop"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@id/dogviewH10"
        app:layout_constraintTop_toBottomOf="@id/dogviewH03"
        app:layout_constraintStart_toEndOf="@id/dogviewV25"
        app:layout_constraintEnd_toStartOf="@id/dogviewV60" />


    <TextView
        android:id="@+id/dogviewBodyScoreHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Recent Body Scores"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@id/dogviewH60"
        app:layout_constraintTop_toBottomOf="@id/dogviewH53"
        app:layout_constraintStart_toEndOf="@id/dogviewV25"
        app:layout_constraintEnd_toStartOf="@id/dogviewV60" />

    <TextView
        android:id="@+id/dogviewVetHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Vet Visits"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@id/dogviewH10"
        app:layout_constraintTop_toBottomOf="@id/dogviewH03"
        app:layout_constraintStart_toEndOf="@id/dogviewV60"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dogviewVaccineHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Vaccines"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@id/dogviewH60"
        app:layout_constraintTop_toBottomOf="@id/dogviewH53"
        app:layout_constraintStart_toEndOf="@id/dogviewV60"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/dogviewCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Close Window"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>