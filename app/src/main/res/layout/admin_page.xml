<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAdminV025"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAdminV15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAdminH05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAdminH95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Home"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="@id/guidelineAdminV025"
        app:layout_constraintEnd_toStartOf="@id/guidelineAdminV15"
        app:layout_constraintTop_toTopOf="@id/guidelineAdminH05"
        app:layout_constraintBottom_toTopOf="@id/buttonEditKennel"
         />

    <Button
        android:id="@+id/buttonEditKennel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Edit Kennel"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="@id/guidelineAdminV025"
        app:layout_constraintEnd_toStartOf="@id/guidelineAdminV15"
        app:layout_constraintTop_toBottomOf="@id/buttonHome"
        app:layout_constraintBottom_toTopOf="@id/buttonChangeLogin"
        />

    <Button
        android:id="@+id/buttonChangeLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Change Login"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="@id/guidelineAdminV025"
        app:layout_constraintEnd_toStartOf="@id/guidelineAdminV15"
        app:layout_constraintTop_toBottomOf="@id/buttonEditKennel"
        app:layout_constraintBottom_toTopOf="@id/guidelineAdminH95"
        />


</androidx.constraintlayout.widget.ConstraintLayout>