<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sledElementV47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sledElementV53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sledElementH60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <View
        android:id="@+id/sledElementDogBackgroundLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dog1"
        app:layout_constraintBottom_toTopOf="@+id/sledElementH60"
        app:layout_constraintEnd_toStartOf="@+id/sledElementV47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/sledElementDogBackgroundRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dog1"
        app:layout_constraintBottom_toTopOf="@+id/sledElementH60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sledElementV53"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dog_view_standard"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/sledElementV47"
        app:layout_constraintEnd_toStartOf="@id/sledElementV53"/>




    <com.diarreatracker.ui.component.CustomTextView
        android:id="@+id/sledElementDogRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="28sp"
        android:layout_margin="6dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/dark_mode_background"


        android:text="com.diarreatracker.ui.component.CustomTextView"

        app:layout_constraintBottom_toTopOf="@+id/sledElementH60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sledElementV53"
        app:layout_constraintTop_toTopOf="parent" />

    <com.diarreatracker.ui.component.CustomTextView
        android:id="@+id/sledElementDogLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="28sp"
        android:layout_margin="6dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/dark_mode_background"


        android:text="com.diarreatracker.ui.component.CustomTextView"

        app:layout_constraintBottom_toTopOf="@+id/sledElementH60"
        app:layout_constraintEnd_toStartOf="@+id/sledElementV47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>