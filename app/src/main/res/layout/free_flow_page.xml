<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dynamic_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode_background">



    <ImageView
        android:id="@+id/adminModeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/adminpagebackground"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/adminModeTopText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"

        android:background="@color/dark_mode_background"
        android:fontFamily="monospace"
        android:text="   ADMIN MODE   "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible"

        app:layout_constraintBottom_toTopOf="@id/zoomable_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adminModeBottomText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"

        android:background="@color/dark_mode_background"
        android:fontFamily="monospace"
        android:text="   ANY CHANGES ARE PERMANENT   "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible"

        app:layout_constraintTop_toBottomOf="@id/zoomable_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <!-- this is the zoomable container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zoomable_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@color/dark_mode_background"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Optional controls to add and remove elements -->
    <Button
        android:id="@+id/add_element_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/remove_element_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/save_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save State"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_element_button"
        app:layout_constraintEnd_toStartOf="@id/load_state_button"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/load_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load State"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/save_state_button"
        app:layout_constraintEnd_toStartOf="@id/remove_element_button"
        android:layout_margin="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
