<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="500dp"
    android:background="#DC171718"
    android:descendantFocusability="beforeDescendants">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:autoSizeTextType="uniform"
        android:text="Cage Info"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogListRecycler"
        android:layout_width="400dp"
        android:layout_height="270dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:descendantFocusability="afterDescendants"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <LinearLayout
        android:id="@+id/sideBarRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/dogListRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dogListRecycler"
        app:layout_constraintTop_toTopOf="@+id/dogListRecycler">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cageStatusRecycler"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="end" />

        <Button
            android:id="@+id/editCageGeometryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit Cage Properties" />

        <Button
            android:id="@+id/placeholderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placerholder"
            android:visibility="invisible" />

        <Button
            android:id="@+id/addDogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Dog" />




    </LinearLayout>

    <ImageButton
        android:id="@+id/dialogCloseButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/btn_default"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/sideBarRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="48dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
